= simple_form_for [@project, @booking], html: {class: 'form-horizontal'} do |f|
  .row
    = render "layouts/errors", :object => @booking
  .row
    .col-md-5
      .form-group
        = f.label 'STUDIO', class: 'ls'
        .input-group{id: 'facility_studio' }
          = f.input_field :facility_studio, as: :string,
                          readonly: true,
                          value: "#{SunraRestApi::Application::config.studio_name}", 
                          class: 'form-control'

    .col-md-5
      .form-group
        = f.label 'DATE', class: 'ls'
        .input-group{id: 'date_picker', class: 'date' }
          = f.input_field :date, 
                          as: :string, 
                          class: 'form-control',
                          value: (@booking.date ? @booking.date : DateTime.now).to_s(:hyphenated_date)

          %span{class: 'input-group-addon'}
            %span{class: 'glyphicon glyphicon-calendar'}

  .row
    .form-inline 
      .form-group.col-md-5
        = f.label 'START TIME', class: 'ls'
        .input-group{id: 'start_picker', class: 'date', style: 'width: 400px; margin-right: 50px;'}
          = f.input_field :start_time, as: :string, class: 'form-control',
            value: @booking.start_time ? @booking.start_time.strftime("%H:%M") : "17:00"

          %span{class: 'input-group-addon'}
            %span{class: 'glyphicon glyphicon-time'}

      .form-group.col-md-5
        = f.label 'END TIME', label_for: 'end_picker', class: 'ls text-uppercase'
        .input-group{id: 'end_picker', class: 'date', style: 'width: 400px'}
          = f.input_field :end_time, as: :string, class: 'form-control', 
            value: @booking.end_time ? @booking.end_time.strftime("%H:%M") : "23:30"

          %span{:class=>"input-group-addon"}
            %span{:class => "glyphicon glyphicon-time"}

  .row
    .form-group.col-md-10
      .checkbox
        %label
          = f.check_box :webcast
          Webcast Booking?

  .row
    .form-group.col-md-10
      = f.input :availability_notes, :label => "NOTES", 
          :input_html => {class: 'form-control', :rows => 6  }

  :javascript
    $(function() {
      $('#date_picker').datetimepicker({format: "DD-MM-YYYY",  daysOfWeekDisabled: [0, 6]});
      $('#start_picker').datetimepicker({format: 'LT'});
      $('#end_picker').datetimepicker({format: 'LT'});
    });

  .btn-group.row
    = f.button :submit, (request.fullpath.end_with?('edit') ? "UPDATE" : "CREATE") , :class => 'btn btn-success ls w_220'
    = link_to "CANCEL", :back, :class => 'btn btn-danger ls w_220'
