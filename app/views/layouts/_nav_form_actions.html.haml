.form-actions
  = link_to t('.back', :default => t("helpers.links.#{t_class}.back")),
              root, :class => 'btn btn-success'
  = link_to t('.edit', :default => t("helpers.links.#{t_class}.edit")),
              edit_polymorphic_path(path), :class => 'btn btn-warning'
  = link_to t('.destroy', :default => t("helpers.links.#{t_class}.destroy")),
              polymorphic_path(path),
              :method => 'delete',
              :data => { :confirm => t('.confirm',
                         :default => t("helpers.links.confirm",
                         :default => 'Are you sure?')) },
              :class => 'btn btn-danger'
