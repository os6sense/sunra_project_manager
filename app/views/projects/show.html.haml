- model_class = Project
.page-header
  %h1="#{t('.title', :default => model_class.model_name.human)}: #{@project.project_name}"

%dl{:class => "dl-horizontal"}
  %dt
    %strong= "#{model_class.human_attribute_name(:client_name)}:"
  %dd= @project.client_name
  %dt
    %strong= "#{model_class.human_attribute_name(:project_name)}:"
  %dd= @project.project_name

.bookings{ :style => "width: 80%;" }
  = render :template => 'bookings/index', :locals => {:no_header => true}

.login
  = #render :template => 'client_login/index', :locals => {:no_header => true}

= render :partial  => 'layouts/nav_form_actions',
  :locals => {:t_class => "project",
  :path => [@project ],
  :root =>[Project] }

